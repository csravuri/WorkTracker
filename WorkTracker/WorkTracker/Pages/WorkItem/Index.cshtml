            <th>
                @Html.DisplayNameFor(model => model.WorkItem[0].LastWorkedDateUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkItem[0].EndDateUtc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkItem[0].Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkItem[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.WorkItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WebURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocalPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvestigationStartDateUtc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastWorkedDateUtc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDateUtc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.WI_ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.WI_ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.WI_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
